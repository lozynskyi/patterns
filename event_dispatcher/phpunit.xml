<?xml version="1.0" encoding="UTF-8"?>

<phpunit 
    bootstrap                   = "vendor/autoload.php"
    backupGlobals               = "false"
    backupStaticAttributes      = "false"
    colors                      = "true"
    convertErrorsToExceptions   = "true"
    convertNoticesToExceptions  = "true"
    convertWarningsToExceptions = "true"
    processIsolation            = "false"
    stopOnFailure               = "false"
    syntaxCheck                 = "false">

    <testsuites>
        <testsuite name="unit">
            <directory sufix="Test.php">./tests/Unit</directory>
        </testsuite>
        <testsuite name="integration">
            <directory sufix="Test.php">./tests/Integration</directory>
        </testsuite>
    </testsuites>
</phpunit>
